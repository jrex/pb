<%- model_class = Tip -%>
<div class="page-header">
  <h1><%=t '.title', :default => Tip %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:received_at) %></th>
      <th><%= model_class.human_attribute_name(:tx_id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:btc_amount_in_satoshis) %></th>
      <th><%= model_class.human_attribute_name(:ltc_amount_in_satoshis) %></th>
      <th><%= model_class.human_attribute_name(:doge_amount_in_satoshis) %></th>
      <th><%= model_class.human_attribute_name(:sender_address) %></th>
      <th><%= model_class.human_attribute_name(:usd_value_in_cents) %></th>
      <th><%= model_class.human_attribute_name(:btc_fee_in_satoshis) %></th>
      <th><%= model_class.human_attribute_name(:ltc_fee_in_satoshis) %></th>
      <th><%= model_class.human_attribute_name(:doge_fee_in_satoshis) %></th>
      <th><%= model_class.human_attribute_name(:recipient_address) %></th>
      <th><%= model_class.human_attribute_name(:fee_in_usd) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tips.each do |tip| %>
      <tr>
        <td><%= tip.id %></td>
        <td><%= tip.received_at %></td>
        <td><%= tip.tx_id %></td>
        <td><%= tip.name %></td>
        <td><%= tip.email %></td>
        <td><%= tip.btc_amount_in_satoshis %></td>
        <td><%= tip.ltc_amount_in_satoshis %></td>
        <td><%= tip.doge_amount_in_satoshis %></td>
        <td><%= tip.sender_address %></td>
        <td><%= tip.usd_value_in_cents %></td>
        <td><%= tip.btc_fee_in_satoshis %></td>
        <td><%= tip.ltc_fee_in_satoshis %></td>
        <td><%= tip.doge_fee_in_satoshis %></td>
        <td><%= tip.recipient_address %></td>
        <td><%= tip.fee_in_usd %></td>
        <td><%=l tip.created_at, format: :long %></td>
        <td>
          <%= link_to tip_path(tip), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to tip_path(tip), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_tip_path,
            :class => 'btn btn-primary' %>
