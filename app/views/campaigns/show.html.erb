<%- model_class = Campaign -%>
<div class="page-header">
  <h1><%=t '.title', :default => Campaign %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @campaign.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:recipient) %></dt>
      <dd><pre class="prettyprint"><%= @campaign.recipient %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:redirect_url) %></dt>
      <dd><pre class="prettyprint"><%= @campaign.redirect_url %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @campaign.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:bitcoin) %></dt>
      <dd><pre class="prettyprint"><%= @campaign.bitcoin %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:dogecoin) %></dt>
      <dd><pre class="prettyprint"><%= @campaign.dogecoin %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:litecoin) %></dt>
      <dd><pre class="prettyprint"><%= @campaign.litecoin %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:btc_address) %></dt>
      <dd><pre class="prettyprint"><%= @campaign.btc_address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:dogecoin_address) %></dt>
      <dd><pre class="prettyprint"><%= @campaign.dogecoin_address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:litecoin_address) %></dt>
      <dd><pre class="prettyprint"><%= @campaign.litecoin_address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:active) %></dt>
      <dd><pre class="prettyprint"><%= @campaign.active %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:btc_total_in_satoshis) %></dt>
      <dd><pre class="prettyprint"><%= @campaign.btc_total_in_satoshis %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:ltc_total_in_satoshis) %></dt>
      <dd><pre class="prettyprint"><%= @campaign.ltc_total_in_satoshis %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:doge_total_in_satoshis) %></dt>
      <dd><pre class="prettyprint"><%= @campaign.doge_total_in_satoshis %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:archived) %></dt>
      <dd><pre class="prettyprint"><%= @campaign.archived %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              campaigns_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_campaign_path(@campaign), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              campaign_path(@campaign),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

