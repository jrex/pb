<%- model_class = Tip -%>
<div class="page-header">
  <h1><%=t '.title', :default => Tip %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:received_at) %></dt>
      <dd><pre class="prettyprint"><%= @tip.received_at %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:tx_id) %></dt>
      <dd><pre class="prettyprint"><%= @tip.tx_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @tip.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:email) %></dt>
      <dd><pre class="prettyprint"><%= @tip.email %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:btc_amount_in_satoshis) %></dt>
      <dd><pre class="prettyprint"><%= @tip.btc_amount_in_satoshis %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:ltc_amount_in_satoshis) %></dt>
      <dd><pre class="prettyprint"><%= @tip.ltc_amount_in_satoshis %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:doge_amount_in_satoshis) %></dt>
      <dd><pre class="prettyprint"><%= @tip.doge_amount_in_satoshis %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:sender_address) %></dt>
      <dd><pre class="prettyprint"><%= @tip.sender_address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:usd_value_in_cents) %></dt>
      <dd><pre class="prettyprint"><%= @tip.usd_value_in_cents %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:btc_fee_in_satoshis) %></dt>
      <dd><pre class="prettyprint"><%= @tip.btc_fee_in_satoshis %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:ltc_fee_in_satoshis) %></dt>
      <dd><pre class="prettyprint"><%= @tip.ltc_fee_in_satoshis %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:doge_fee_in_satoshis) %></dt>
      <dd><pre class="prettyprint"><%= @tip.doge_fee_in_satoshis %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:recipient_address) %></dt>
      <dd><pre class="prettyprint"><%= @tip.recipient_address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:fee_in_usd) %></dt>
      <dd><pre class="prettyprint"><%= @tip.fee_in_usd %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              tips_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tip_path(@tip), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tip_path(@tip),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

