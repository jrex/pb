<%- model_class = Campaign -%>
<div class="page-header">
  <h1><%=t '.title', :default => Campaign %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:recipient) %></th>
      <th><%= model_class.human_attribute_name(:redirect_url) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:bitcoin) %></th>
      <th><%= model_class.human_attribute_name(:dogecoin) %></th>
      <th><%= model_class.human_attribute_name(:litecoin) %></th>
      <th><%= model_class.human_attribute_name(:btc_address) %></th>
      <th><%= model_class.human_attribute_name(:dogecoin_address) %></th>
      <th><%= model_class.human_attribute_name(:litecoin_address) %></th>
      <th><%= model_class.human_attribute_name(:active) %></th>
      <th><%= model_class.human_attribute_name(:btc_total_in_satoshis) %></th>
      <th><%= model_class.human_attribute_name(:ltc_total_in_satoshis) %></th>
      <th><%= model_class.human_attribute_name(:doge_total_in_satoshis) %></th>
      <th><%= model_class.human_attribute_name(:archived) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.id %></td>
        <td><%= campaign.title %></td>
        <td><%= campaign.recipient %></td>
        <td><%= campaign.redirect_url %></td>
        <td><%= campaign.description %></td>
        <td><%= campaign.bitcoin %></td>
        <td><%= campaign.dogecoin %></td>
        <td><%= campaign.litecoin %></td>
        <td><%= campaign.btc_address %></td>
        <td><%= campaign.dogecoin_address %></td>
        <td><%= campaign.litecoin_address %></td>
        <td><%= campaign.active %></td>
        <td><%= campaign.btc_total_in_satoshis %></td>
        <td><%= campaign.ltc_total_in_satoshis %></td>
        <td><%= campaign.doge_total_in_satoshis %></td>
        <td><%= campaign.archived %></td>
        <td><%=l campaign.created_at, format: :long %></td>
        <td>
          <%= link_to campaign_path(campaign), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to campaign_path(campaign), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_campaign_path,
            :class => 'btn btn-primary' %>
