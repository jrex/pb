<h1>Listing tips</h1>

<table>
  <thead>
    <tr>
      <th>Received at</th>
      <th>Tx</th>
      <th>Name</th>
      <th>Email</th>
      <th>Btc amount in satoshis</th>
      <th>Ltc amount in satoshis</th>
      <th>Doge amount in satoshis</th>
      <th>Sender address</th>
      <th>Usd value in cents</th>
      <th>Btc fee in satoshis</th>
      <th>Ltc fee in satoshis</th>
      <th>Doge fee in satoshis</th>
      <th>Recipient address</th>
      <th>Campaign</th>
      <th>Fee in usd</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tips.each do |tip| %>
      <tr>
        <td><%= tip.received_at %></td>
        <td><%= tip.tx_id %></td>
        <td><%= tip.name %></td>
        <td><%= tip.email %></td>
        <td><%= tip.btc_amount_in_satoshis %></td>
        <td><%= tip.ltc_amount_in_satoshis %></td>
        <td><%= tip.doge_amount_in_satoshis %></td>
        <td><%= tip.sender_address %></td>
        <td><%= tip.usd_value_in_cents %></td>
        <td><%= tip.btc_fee_in_satoshis %></td>
        <td><%= tip.ltc_fee_in_satoshis %></td>
        <td><%= tip.doge_fee_in_satoshis %></td>
        <td><%= tip.recipient_address %></td>
        <td><%= tip.campaign %></td>
        <td><%= tip.fee_in_usd %></td>
        <td><%= link_to 'Show', tip %></td>
        <td><%= link_to 'Edit', edit_tip_path(tip) %></td>
        <td><%= link_to 'Destroy', tip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tip', new_tip_path %>
