<h1>Listing campaigns</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Recipient</th>
      <th>Redirect url</th>
      <th>Description</th>
      <th>Bitcoin</th>
      <th>Dogecoin</th>
      <th>Litecoin</th>
      <th>Btc address</th>
      <th>Dogecoin address</th>
      <th>Litecoin address</th>
      <th>Active</th>
      <th>Btc total in satoshis</th>
      <th>Ltc total in satoshis</th>
      <th>Doge total in satoshis</th>
      <th>Archived</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.title %></td>
        <td><%= campaign.recipient %></td>
        <td><%= campaign.redirect_url %></td>
        <td><%= campaign.description %></td>
        <td><%= campaign.bitcoin %></td>
        <td><%= campaign.dogecoin %></td>
        <td><%= campaign.litecoin %></td>
        <td><%= campaign.btc_address %></td>
        <td><%= campaign.dogecoin_address %></td>
        <td><%= campaign.litecoin_address %></td>
        <td><%= campaign.active %></td>
        <td><%= campaign.btc_total_in_satoshis %></td>
        <td><%= campaign.ltc_total_in_satoshis %></td>
        <td><%= campaign.doge_total_in_satoshis %></td>
        <td><%= campaign.archived %></td>
        <td><%= campaign.user %></td>
        <td><%= link_to 'Show', campaign %></td>
        <td><%= link_to 'Edit', edit_campaign_path(campaign) %></td>
        <td><%= link_to 'Destroy', campaign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

